{
  // General Settings
  "redhat.telemetry.enabled": true,
  "security.workspace.trust.untrustedFiles": "open",
  "files.autoSave": "afterDelay",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.sortOrder": "type",
  "workbench.statusBar.visible": false,
  "workbench.activityBar.location": "hidden",
  "workbench.sideBar.location": "right",
  "workbench.editor.enablePreview": false,
  "workbench.editor.showTabs": "none",
  "workbench.iconTheme": "a-file-icon-vscode",
  "workbench.tree.indent": 17,
  "workbench.tree.renderIndentGuides": "onHover",

  // JavaScript & TypeScript Formatter Settings
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // HTML & CSS Formatter Settings
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // JSON Formatter Settings
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Editor Settings
  "editor.formatOnSave": true,
  "editor.fontSize": 13,
  "editor.fontFamily": "'Fira Code', monospace",
  "editor.fontLigatures": true,
  "editor.fontWeight": "400",
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 100,
  "editor.tabSize": 3,
  "editor.hover.delay": 2000,
  "editor.suggestFontSize": 15,
  "editor.suggestLineHeight": 40,
  "editor.renderLineHighlight": "none",
  "editor.renderWhitespace": "none",
  "editor.lineNumbers": "off",
  "editor.guides.indentation": false,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "expand",
  "editor.cursorStyle": "line",
  "editor.smoothScrolling": true,
  "editor.minimap.enabled": false,
  "editor.snippetSuggestions": "top", // top, bottom, inline, none
  "editor.quickSuggestions": {
    "strings": true
  },
  // "editor.quickSuggestionsDelay": 100,

  // Terminal Settings
  "terminal.integrated.lineHeight": 1,
  "terminal.integrated.fontSize": 11,
  "terminal.integrated.fontWeight": "800",

  // Git Settings
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "javascript.updateImportsOnFileMove.enabled": "always",

  // Material Icon Theme Settings
  "material-icon-theme.activeIconPack": "react",
  "material-icon-theme.saturation": 0.2,
  "material-icon-theme.opacity": 1,
  "a-file-icon-vscode.saturation": 0.5,

  // Custom CSS & JS Imports
  "vscode_custom_css.imports": [
    "file:///C:/custom-vscode/custom-vscode.css",
    "file:///C:/custom-vscode/vscode-script.js",
    "file:///c:/Users/dell/.vscode/extensions/brandonkirbyson.vscode-animations-2.0.7/dist/updateHandler.js"
  ],

  // Breadcrumbs
  "breadcrumbs.enabled": false,

  // Code Runner
  "code-runner.saveFileBeforeRun": true,

  // Color Customizations
  "workbench.colorCustomizations": {
    // "editor.background": "#101716",
    // "sideBar.background": "#000b09",
    // "terminal.background": "#000b09",
    "editor.lineHighlightBorder": "#101716",
    "editorCursor.foreground": "#079f76",
    "editor.selectionBackground": "#566a75",
    "sideBar.foreground": "#049278",
    "titleBar.border": "#000b09",
    "titleBar.activeBackground": "#000b09",
    "titleBar.activeForeground": "#037065",
    "titleBar.inactiveBackground": "#000b09",
    "titleBar.inactiveForeground": "#037065",
    "terminal.foreground": "#c0c66f",
    "[Material Theme*]": {
      "activityBarBadge.background": "#64FFDA",
      "activityBar.activeBorder": "#64FFDA",
      "list.activeSelectionForeground": "#64FFDA",
      "list.inactiveSelectionForeground": "#64FFDA",
      "list.highlightForeground": "#64FFDA",
      "scrollbarSlider.activeBackground": "#64FFDA50",
      "editorSuggestWidget.highlightForeground": "#64FFDA",
      "textLink.foreground": "#64FFDA",
      "progressBar.background": "#64FFDA",
      "pickerGroup.foreground": "#64FFDA",
      "tab.activeBorder": "#64FFDA",
      "notificationLink.foreground": "#64FFDA",
      "editorWidget.resizeBorder": "#64FFDA",
      "editorWidget.border": "#64FFDA",
      "settings.modifiedItemIndicator": "#64FFDA",
      "settings.headerForeground": "#64FFDA",
      "panelTitle.activeBorder": "#64FFDA",
      "breadcrumb.activeSelectionForeground": "#64FFDA",
      "menu.selectionForeground": "#64FFDA",
      "menubar.selectionForeground": "#64FFDA",
      "editor.findMatchBorder": "#64FFDA",
      "selection.background": "#64FFDA40",
      "statusBarItem.remoteBackground": "#64FFDA"
    }
  },
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "variable",
        "settings": {
          "foreground": "#afe6d0"
        }
      },
      {
        "scope": "keyword.control",
        "settings": {
          "fontStyle": "bold",
          "foreground": "#607c7e"
        }
      },
      {
        "scope": ["comment", "comment.block", "comment.line"],
        "settings": {
          "fontStyle": "italic bold",
          "foreground": "#364135"
        }
      },
      {
        "scope": ["string", "string.quoted"],
        "settings": {
          "fontStyle": "bold"
        }
      },
      {
        "scope": ["constant", "constant.numeric"],
        "settings": {
          "foreground": "#b17651"
        }
      },
      {
        "scope": "entity.name",
        "settings": {
          "fontStyle": "bold",
          "foreground": "#8c55a3"
        }
      },
      {
        "scope": "variable.parameter",
        "settings": {
          "foreground": "#038a7a"
        }
      },
      {
        "scope": "punctuation",
        "settings": {
          "foreground": "#6b6b6b"
        }
      }
    ]
  },
  "workbench.colorTheme": "Material Theme Deepforest",
  "window.newWindowProfile": "Default",
  "window.menuBarVisibility": "compact",
  "animations.Enabled": true,
  "materialTheme.accent": "Bright Teal",
  "workbench.productIconTheme": "a-file-icon-vscode-product-icon-theme",
  "material-icon-theme.folders.color": "#7cb342",
  "github.copilot.enable": {
    "*": false,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  }
}
